# Instagram Automation - Environment Variables
# Copy this file to .env and fill in your credentials

# Instagram Credentials (REQUIRED)
_USERNAME=your_instagram_username
_PASSWORD=your_instagram_password

# Directories
DOWNLOAD_DIR=downloads
LOG_DIR=logs

# Logging
LOG_LEVEL=INFO

# ============================================
# SAFETY SETTINGS - CRITICAL FOR ACCOUNT PROTECTION
# ============================================

# Posting Configuration - SAFETY FIRST
POST_DELAY_SECONDS=900          # 15 minutes between posts (default)
POST_DELAY_RANDOM_MIN=600       # 10 minutes minimum delay
POST_DELAY_RANDOM_MAX=1800      # 30 minutes maximum delay

# Daily/Hourly Limits - CRITICAL for account safety
MAX_POSTS_PER_DAY=10            # Maximum 10 posts per day (very safe)
MAX_POSTS_PER_HOUR=2            # Maximum 2 posts per hour
MAX_COMMENTS_PER_HOUR=20        # Maximum 20 comments per hour
MAX_LIKES_PER_HOUR=50           # Maximum 50 likes per hour

# Auto-like comments feature - WITH SAFETY LIMITS
AUTO_LIKE_COMMENTS=false        # Enable auto-like comments
AUTO_LIKE_COMMENT_DELAY=180     # 3 minutes delay after upload (safer)
AUTO_LIKE_MAX_PER_POST=10       # Max likes per post
AUTO_LIKE_DELAY_BETWEEN=5       # 5 seconds between likes

# Auto-comment feature - WITH SAFETY LIMITS
AUTO_COMMENT_ENABLED=false      # Enable auto-comment
AUTO_COMMENT_TEXT=Thanks for watching! üôå
AUTO_COMMENT_DELAY=60           # 1 minute delay after upload (safer)

# Auto-reply to comments feature - WITH SAFETY LIMITS
AUTO_REPLY_ENABLED=false        # Enable auto-reply
AUTO_REPLY_TEXT=Thanks for your comment! üôè
AUTO_REPLY_DELAY=300            # 5 minutes delay after upload
AUTO_REPLY_CHECK_INTERVAL=600   # Check every 10 minutes
AUTO_REPLY_MAX_PER_POST=5       # Max replies per post
AUTO_REPLY_DELAY_BETWEEN=30     # 30 seconds between replies

# Rate limit handling
ENABLE_EXPONENTIAL_BACKOFF=true # Enable exponential backoff on errors
MAX_RETRY_ATTEMPTS=3            # Maximum retry attempts
RETRY_BASE_DELAY=60             # Base delay for retries (1 minute)

# Session safety
SESSION_SAVE_ENABLED=true       # Save session for reuse
SESSION_FILE=session/ig_session.json

# Trending hashtags
USE_TRENDING_HASHTAGS=true      # Enable trending hashtags
HASHTAG_COUNT=10                # Number of hashtags to add
BASE_HASHTAGS=#viral #trending #fyp  # Base hashtags to always include

# Optional Scheduling
AUTO_POST_ENABLED=false         # Enable automatic posting
POST_INTERVAL_HOURS=2           # Interval between posts (hours)

